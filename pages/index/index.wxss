/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100vh;
}

.container__result {
  height: 30%;
  border-bottom: 1px solid #e0e0e0;
  width: 100%;
  font-size: 144rpx;
  font-weight: 450;
  text-align: right;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  color: #ff982e;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.container__result__info {
  padding-right: 10px;
  overflow: auto;
}

.container__count {
  width: 100%;
  height: 70%;
  display: flex;
  flex-wrap: wrap;
}

.container__count__content {
  width: 25%;
  height: 20%;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #e0e0e0;
  border-right: 1px solid #e0e0e0;
  box-sizing: border-box;
  font-size: 72rpx;
  font-weight: 700;
}
.container__count__content:active {
  background-color: #ff982e;
  color: #fff;
}

.container__count__content text {
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container__count__content:nth-child(4n) {
  border-right: none;
}

.container__count__content:last-child {
  background-color: #ff982e;
  font-size: 88rpx;
  font-weight: 400;
  color: #fff;
}

.container__count__content:nth-child(21),
.container__count__content:nth-child(22),
.container__count__content:nth-child(23),
.container__count__content:nth-child(24) {
  border-bottom: none;
}