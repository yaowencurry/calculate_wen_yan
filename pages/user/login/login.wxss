.login {
  height: 80vh;
  max-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 30px;
}
.login-title {
  text-align: center;
  font-size: 48rpx;
  margin-bottom: 20px;
  padding-bottom: 15px;
  color: #0078d7;
  border-bottom: 1px solid #0078d7;
}

.login-input {
  margin-bottom: 20px;
}
.login-input text {
  font-size: 32rpx;
  color: #999;
  font-weight: 300;
}
.login-input input {
  border: 1px solid #e0e0e0;
  margin-top: 10px;
  padding: 10px 15px;
}

.login-btn {
  margin-top: 20px;
  background-color: #0078d7;
  color: #fff;
}


