/**index.wxss**/
ec-canvas {
  width: 100%;
  height: 85%;
}

.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.container__btn {
  display: flex;
  justify-content: flex-start;
  margin-bottom:  20rpx;
}

.container__btn view {
  width: 200rpx;
  padding: 15rpx 20rpx;
  border: 1px solid #e0e0e0;
  color: #333;
  margin-right: 30rpx;
  text-align: center;
  border-radius: 35rpx;
}
.container__btn .active {
  background-color: #0278da;
  color: #fff;
  border: none;
}
.section {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx 20rpx 0 20rpx;
  font-weight: 700;
}
.section__title {
  color: #bfbfbf;
  font-size: 28rpx;
}
.picker {
  color: #0078d7;
  border: 1px solid #0078d7;
  border-radius: 20rpx;
  padding: 5rpx 15rpx;
  font-size: 28rpx;
}